{
  "name": "h5p-playwright",
  "version": "1.0.0",
  "description": "Automatizaci√≥n de pruebas para H5P.org usando Playwright y TypeScript",
  "main": "index.js",
  "scripts": {
    "login": "tsx src/login.ts",
    "verify-session": "tsx src/with-session.ts",
    "download": "tsx src/download-true-false-h5p.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "quality": "npm run type-check && npm run lint && npm run format:check",
    "quality:fix": "npm run format && npm run lint:fix && npm run type-check"
  },
  "keywords": [
    "playwright",
    "typescript",
    "automation",
    "testing",
    "h5p"
  ],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "dotenv": "^17.2.3",
    "playwright": "^1.57.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}